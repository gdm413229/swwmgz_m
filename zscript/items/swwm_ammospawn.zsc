// on-demand ammo spawners
Mixin Class SWWMOndemandAmmoSpawner
{
	override void SpawnAmmo()
	{
		let ac = PickAmmo();
		if ( !ac ) return;
		let a = Spawn(ac,pos);
		SWWMUtility.TransferItemProp(self,a);
	}
}

