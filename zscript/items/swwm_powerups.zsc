	{
		if ( level.maptime <= lasteffect+5 ) return;
		if ( Owner.GiveBody(5,100) )
			SWWMScoreObj.Spawn(5,Owner.Vec3Offset(FRandom[ScoreBits](-8,8),FRandom[ScoreBits](-8,8),FRandom[ScoreBits](-8,8)+Owner.Height/2),ST_Health);
